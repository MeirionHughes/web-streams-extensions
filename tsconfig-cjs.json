{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "rootDir": "./src",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
